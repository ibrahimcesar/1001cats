---
/**
 * Category Archive Page
 * Dynamic route for displaying posts filtered by category
 */

import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/common/Header.astro';
import Footer from '../../../components/common/Footer.astro';
import Card from '../../../components/ui/Card.astro';
import Tag from '../../../components/ui/Tag.astro';
import { formatDate } from '../../../utils/formatDate';
import { getReadingTime } from '../../../utils/reading-time';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });

  // Get all unique categories
  const allCategories = [...new Set(allPosts.map(post => post.data.category))];

  return allCategories.map((category) => {
    const filteredPosts = allPosts
      .filter(post => post.data.category === category)
      .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

    return {
      params: { category },
      props: { posts: filteredPosts },
    };
  });
}

interface Props {
  posts: any[];
}

const { category } = Astro.params;
const { posts } = Astro.props;

// Get all categories for the sidebar
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});
const allCategories = [...new Set(allPosts.map(post => post.data.category))];

// Category descriptions
const categoryDescriptions: Record<string, string> = {
  science: 'Exploring the natural world through empirical observation and experimentation',
  philosophy: 'Fundamental questions about existence, knowledge, values, and reality',
  technology: 'Tools, systems, and innovations shaping our digital and physical world',
  discordianism: 'The sacred art of creative chaos and disorder',
  life: 'Reflections on the human experience and existence',
  universe: 'The cosmos, space, time, and everything beyond',
  everything: 'The intersection of all things, or perhaps nothing at all',
};

const categoryDescription = categoryDescriptions[category] || `Exploring ${category}`;
---

<BaseLayout
  title={`${category.charAt(0).toUpperCase() + category.slice(1)} Posts`}
  description={`Browse all posts in the ${category} category`}
>
  <Header />

  <main id="main-content" class="main-content">
    <div class="container">
      <!-- Page Header -->
      <header class="page-header">
        <div class="category-icon">üìö</div>
        <h1 class="page-title">
          <span class="category-highlight">{category}</span>
        </h1>
        <p class="category-description">{categoryDescription}</p>
        <p class="post-count">
          {posts.length} {posts.length === 1 ? 'post' : 'posts'} in this category
        </p>
      </header>

      <!-- Posts List -->
      <div class="posts-section">
        <div class="posts-list">
          {posts.map(async (post) => {
            const readingTime = getReadingTime(post.body);

            return (
              <article class="post-item">
                <Card hover padding="lg">
                  <div class="post-content">
                    <div class="post-header">
                      <h2 class="post-title">
                        <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                      </h2>

                      <div class="post-meta">
                        <time datetime={post.data.pubDate.toISOString()}>
                          {formatDate(post.data.pubDate)}
                        </time>
                        <span class="separator">‚Ä¢</span>
                        <span class="reading-time">{readingTime.text}</span>
                      </div>
                    </div>

                    <p class="post-description">{post.data.description}</p>

                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="post-tags">
                        {post.data.tags.map((tag: string) => (
                          <Tag href={`/blog/tag/${tag}`} size="sm">
                            {tag}
                          </Tag>
                        ))}
                      </div>
                    )}
                  </div>
                </Card>
              </article>
            );
          })}
        </div>
      </div>

      <!-- All Categories Sidebar -->
      <aside class="sidebar-section">
        <h3 class="sidebar-title">Browse All Categories</h3>
        <div class="category-list">
          {allCategories.map((cat) => {
            const count = allPosts.filter(p => p.data.category === cat).length;
            const isActive = cat === category;

            return (
              <a
                href={`/blog/category/${cat}`}
                class:list={['category-item', { active: isActive }]}
              >
                <span class="category-name">{cat}</span>
                <span class="category-count">{count}</span>
              </a>
            );
          })}
        </div>
      </aside>

      <!-- Navigation -->
      <nav class="page-navigation">
        <a href="/blog" class="back-link">‚Üê Back to all posts</a>
      </nav>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .main-content {
    min-height: 100vh;
    padding: 2rem 0;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Page Header */
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .category-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .page-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .category-highlight {
    color: var(--accent-primary);
    text-transform: capitalize;
  }

  .category-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    font-style: italic;
  }

  .post-count {
    font-size: 1rem;
    color: var(--text-secondary);
  }

  /* Posts Section */
  .posts-section {
    margin-bottom: 3rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-item {
    list-style: none;
  }

  .post-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .post-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.3;
  }

  .post-title a {
    text-decoration: none;
    color: var(--text-primary);
    transition: color 200ms ease;
  }

  .post-title a:hover {
    color: var(--accent-primary);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .separator {
    color: var(--border-color);
  }

  .post-description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  /* Sidebar */
  .sidebar-section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border-radius: 0.75rem;
  }

  .sidebar-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .category-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .category-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 200ms ease;
  }

  .category-item:hover {
    border-color: var(--accent-primary);
    background: var(--accent-primary);
    color: white;
    transform: translateX(4px);
  }

  .category-item.active {
    background: var(--accent-primary);
    color: white;
    border-color: var(--accent-primary);
  }

  .category-name {
    text-transform: capitalize;
    font-weight: 500;
  }

  .category-count {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  /* Navigation */
  .page-navigation {
    padding: 2rem 0;
    text-align: center;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 500;
    transition: all 200ms ease;
  }

  .back-link:hover {
    border-color: var(--accent-primary);
    background: var(--accent-primary);
    color: white;
  }

  @media (max-width: 640px) {
    .page-title {
      font-size: 1.75rem;
    }

    .category-description {
      font-size: 1rem;
    }

    .post-title {
      font-size: 1.5rem;
    }

    .post-meta {
      flex-wrap: wrap;
    }
  }
</style>
