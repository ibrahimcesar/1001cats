---
/**
 * Blog Listing Page
 * Displays all published blog posts with pagination
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/common/Header.astro';
import Footer from '../../components/common/Footer.astro';
import Card from '../../components/ui/Card.astro';
import Tag from '../../components/ui/Tag.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '../../utils/formatDate';
import { getReadingTime } from '../../utils/reading-time';

// Get all published posts
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort by publication date (newest first)
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get unique categories and tags
const allCategories = [...new Set(sortedPosts.map(post => post.data.category))];
const allTags = [...new Set(sortedPosts.flatMap(post => post.data.tags))];
---

<BaseLayout
  title="Blog"
  description="Explore articles on science, philosophy, technology, and Discordianism"
>
  <Header />

  <main id="main-content" class="main-content">
    <div class="container">
      <!-- Page Header -->
      <header class="page-header">
        <h1 class="page-title">Blog</h1>
        <p class="page-description">
          Exploring science, philosophy, life, the universe, and everything through a Discordian lens.
        </p>
      </header>

      <!-- Stats -->
      <div class="stats-bar">
        <div class="stat">
          <span class="stat-value">{sortedPosts.length}</span>
          <span class="stat-label">Posts</span>
        </div>
        <div class="stat">
          <span class="stat-value">{allCategories.length}</span>
          <span class="stat-label">Categories</span>
        </div>
        <div class="stat">
          <span class="stat-value">{allTags.length}</span>
          <span class="stat-label">Tags</span>
        </div>
      </div>

      <!-- Blog Posts List -->
      <div class="posts-section">
        {sortedPosts.length === 0 ? (
          <Card padding="lg">
            <p class="no-posts">No posts yet. Check back soon!</p>
          </Card>
        ) : (
          <div class="posts-list">
            {sortedPosts.map(async (post) => {
              const { remarkPluginFrontmatter } = await post.render();
              const readingTime = getReadingTime(post.body);

              return (
                <article class="post-item">
                  <Card hover padding="lg">
                    <div class="post-content">
                      <div class="post-header">
                        <h2 class="post-title">
                          <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                        </h2>

                        <div class="post-meta">
                          <time datetime={post.data.pubDate.toISOString()}>
                            {formatDate(post.data.pubDate)}
                          </time>
                          <span class="separator">•</span>
                          <span class="reading-time">{readingTime.text}</span>
                          <span class="separator">•</span>
                          <span class="category">{post.data.category}</span>
                        </div>
                      </div>

                      <p class="post-description">{post.data.description}</p>

                      {post.data.tags && post.data.tags.length > 0 && (
                        <div class="post-tags">
                          {post.data.tags.map((tag) => (
                            <Tag href={`/blog/tag/${tag}`} size="sm">
                              {tag}
                            </Tag>
                          ))}
                        </div>
                      )}
                    </div>
                  </Card>
                </article>
              );
            })}
          </div>
        )}
      </div>

      <!-- Browse by Category -->
      <aside class="sidebar-section">
        <h3 class="sidebar-title">Browse by Category</h3>
        <div class="category-list">
          {allCategories.map((category) => {
            const count = sortedPosts.filter(p => p.data.category === category).length;
            return (
              <a href={`/blog/category/${category}`} class="category-item">
                <span class="category-name">{category}</span>
                <span class="category-count">{count}</span>
              </a>
            );
          })}
        </div>
      </aside>

      <!-- Popular Tags -->
      <aside class="sidebar-section">
        <h3 class="sidebar-title">Popular Tags</h3>
        <div class="tags-cloud">
          {allTags.slice(0, 20).map((tag) => (
            <Tag href={`/blog/tag/${tag}`}>{tag}</Tag>
          ))}
        </div>
      </aside>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .main-content {
    min-height: 100vh;
    padding: 2rem 0;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Page Header */
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Stats Bar */
  .stats-bar {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-bottom: 3rem;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border-radius: 0.75rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--accent-primary);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Posts Section */
  .posts-section {
    margin-bottom: 3rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-item {
    list-style: none;
  }

  .post-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .post-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.3;
  }

  .post-title a {
    text-decoration: none;
    color: var(--text-primary);
    transition: color 200ms ease;
  }

  .post-title a:hover {
    color: var(--accent-primary);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .separator {
    color: var(--border-color);
  }

  .category {
    text-transform: capitalize;
    font-weight: 500;
  }

  .post-description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .no-posts {
    text-align: center;
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin: 2rem 0;
  }

  /* Sidebar Sections */
  .sidebar-section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border-radius: 0.75rem;
  }

  .sidebar-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  /* Category List */
  .category-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .category-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 200ms ease;
  }

  .category-item:hover {
    border-color: var(--accent-primary);
    background: var(--accent-primary);
    color: white;
    transform: translateX(4px);
  }

  .category-name {
    text-transform: capitalize;
    font-weight: 500;
  }

  .category-count {
    font-size: 0.875rem;
    opacity: 0.7;
  }

  /* Tags Cloud */
  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  @media (max-width: 640px) {
    .page-title {
      font-size: 2rem;
    }

    .stats-bar {
      gap: 1.5rem;
      padding: 1rem;
    }

    .stat-value {
      font-size: 1.5rem;
    }

    .post-title {
      font-size: 1.5rem;
    }

    .post-meta {
      flex-wrap: wrap;
    }
  }
</style>
